    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run LearningHouse Service",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/learninghouse-core/learninghouse/__main__.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/learninghouse-core/",
            "justMyCode": true
        },
        {
            "name": "ng serve",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start",
            "cwd": "${workspaceFolder}/learninghouse-ui/",
            "url": "http://localhost:4200/"
        },
        {
            "name": "ng test",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: test",
            "cwd": "${workspaceFolder}/learninghouse-ui/",
            "url": "http://localhost:9876/debug.html"
        }
    ]
}